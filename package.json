{
    "name": "nativescript-gesturehandler",
    "version": "1.0.0",
    "description": "Nativescript plugin for Carto Mobile SDK",
    "scripts": {
        "tsc": "cpy '**/*.d.ts' '../plugin' --parents --cwd=src && tsc -skipLibCheck",
        "clean": "rimraf ./plugin/**/*.d.ts ./plugin/**/*.js ./plugin/**/*.js.map plugin/node_modules plugin/package-lock.json",
        "build.plugin": "npm i && npm run tsc && cp README.md plugin/",
        "build.android": "bash src-native/android/build.sh",
        "build.ios": "bash src-native/ios/build.sh",
        "build.native": "npm run build.android && npm run build.ios",
        "build": "npm run build.native && npm run tsc && lerna publish",
        "demo.ios": "npm i && npm run tsc && cd demo && tns run ios",
        "demo.android": "npm i && npm run tsc && cd demo && tns run android",
        "clean.demo": "rimraf demo/hooks demo/node_modules demo/platforms",
        "plugin.watch.tsc": "npm run tsc -- -w",
        "plugin.watch.android": "npm i && npm-watch build.android",
        "plugin.watch.ios": "npm i && npm-watch build.ios",
        "plugin.watch": "npm run plugin.watch.tsc & npm run plugin.watch.android & npm run plugin.watch.ios",
        "publish": "npm run build && lerna publish",
        "commitmsg": "commitlint -e $GIT_PARAMS"
    },
    "keywords": [
        "NativeScript",
        "JavaScript",
        "Android",
        "iOS"
    ],
    "author": {
        "name": "Martin Guillon",
        "email": "martin@akylas.fr"
    },
    "bugs": {
        "url": "https://github.com/Akylas/nativescript-label/issues"
    },
    "license": "Apache-2.0",
    "homepage": "https://github.com/Akylas/nativescript-label",
    "readmeFilename": "README.md",
    "devDependencies": {
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@angular/core": "^8.0.0",
        "@types/node": "^12.0.4",
        "husky": "^2.3.0",
        "lerna": "^3.14.1",
        "npm-watch": "^0.6.0",
        "prompt": "^1.0.0",
        "rimraf": "^2.6.3",
        "tns-core-modules": "5.4.2",
        "tns-platform-declarations": "^5.4.2",
        "tslint": "^5.17.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-config-standard": "^8.0.1",
        "cpy-cli": "^2.0.0",
        "typescript": "~3.5.1"
    },
    "dependencies": {},
    "bootstrapper": "nativescript-plugin-seed",
    "watch": {
        "build.android": {
            "patterns": [
                "./src-native/android/gesturehandler/src"
            ],
            "extensions": "java"
        },
        "build.ios": {
            "patterns": [
                "./src-native/ios/CartoAdditions"
            ],
            "extensions": "h,m"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
